<div class="container mt-5">
  <h1 class="mb-4">Restaurants</h1>
  <%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-success mb-4' %>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category %></h6>
            <p class="card-text"><%= restaurant.address %></p>
            <a href="<%= restaurant_path(restaurant) %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
