<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.rating %> stars: <%= review.content %></li>
  <% end %>
</ul>

<h3>Add a Review</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating, collection: 1..5, as: :select, label: "Rating (1-5)" %>
  <%= f.input :content, as: :text, label: "Your Review" %>
  <%= f.button :submit, "Submit Review" %>
<% end %>
